@baseUrl = http://localhost:3000
@token = seu-token-jwt-aqui

# ========================================================
#                    EVENTOS (tb_events)
# ========================================================

###
# Criar novo evento
POST {{baseUrl}}/api/events/create
Content-Type: application/json
Authorization: Bearer {{token}}

{
    "title": "Culto de Celebração",
    "event_date": "2026-02-01 19:00:00",
    "description": "Culto especial de celebração mensal"
}

###
# Listar todos os eventos
GET {{baseUrl}}/api/events/get-all
Authorization: Bearer {{token}}

###
# Buscar evento por ID
GET {{baseUrl}}/api/events/get/770e8400-e29b-41d4-a716-446655440001
Authorization: Bearer {{token}}

###
# Atualizar evento
PUT {{baseUrl}}/api/events/update/770e8400-e29b-41d4-a716-446655440001
Content-Type: application/json
Authorization: Bearer {{token}}

{
    "title": "Culto Domingo Manhã - Especial",
    "description": "Culto com apresentação especial do coro"
}

###
# Deletar evento (soft delete)
DELETE {{baseUrl}}/api/events/delete/770e8400-e29b-41d4-a716-446655440001
Authorization: Bearer {{token}}

###
# Ativar evento
PATCH {{baseUrl}}/api/events/activate/770e8400-e29b-41d4-a716-446655440001
Authorization: Bearer {{token}}

###
# Deletar evento permanentemente (hard delete)
DELETE {{baseUrl}}/api/events/delete/770e8400-e29b-41d4-a716-446655440001/hard
Authorization: Bearer {{token}}
