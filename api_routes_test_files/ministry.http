@baseUrl = http://localhost:3000
@token = seu-token-jwt-aqui

# ========================================================
#                MINISTÉRIOS (tb_ministries)
# ========================================================

###
# Criar novo ministério
POST {{baseUrl}}/api/ministries/create
Content-Type: application/json
Authorization: Bearer {{token}}

{
    "name": "Ministério de Louvor",
    "description": "Responsável pela música e adoração nos cultos",
    "id_member": "660e8400-e29b-41d4-a716-446655440001"
}

###
# Listar todos
GET {{baseUrl}}/api/ministries/get-all
Authorization: Bearer {{token}}

###
# Buscar por ID
GET {{baseUrl}}/api/ministries/get/990e8400-e29b-41d4-a716-446655440001
Authorization: Bearer {{token}}

###
# Atualizar
PUT {{baseUrl}}/api/ministries/update/990e8400-e29b-41d4-a716-446655440001
Content-Type: application/json
Authorization: Bearer {{token}}

{
    "name": "Ministério de Louvor - Sede",
    "description": "Responsável pela adoração principal"
}

###
# Deletar (soft)
DELETE {{baseUrl}}/api/ministries/delete/990e8400-e29b-41d4-a716-446655440001
Authorization: Bearer {{token}}

###
# Ativar
PATCH {{baseUrl}}/api/ministries/activate/990e8400-e29b-41d4-a716-446655440001
Authorization: Bearer {{token}}

###
# Deletar permanentemente (hard)
DELETE {{baseUrl}}/api/ministries/delete/990e8400-e29b-41d4-a716-446655440001/hard
Authorization: Bearer {{token}}
